@import '_settings'
@import '_navbar'
@import '_services'
@import '_featured-slider'
@import '_livetheatre'
@import '_partners'
@import '_footer'
@import '_about'
@import '_projects'
@import '_contact'
@import '_products'
@import '_gallery'

normalize-css()
base()

body
	padding: 0px
	visibility: visible
	font-size: 14px

header, .footer
	text-align:center

header
	padding: 5em 0em

body.eq-ui-side-nav-visible .container
	max-width: 1170px !important
h3
	font-size 24px
	font-weight: 300
h1
	color #444
	font-size 30px
h3
	font-size 24px
	font-weight 300
h4
	font-weight bold
	color $white
h5
	color $black
	font-weight 400
	text-align left
h6
	color #000000
	font-weight 500
p
	font-size 14px
	color #333

@media (max-width: 540px){
#products .container{
	padding-right: 15px !important
}
#gallery .container{
	padding-right: 15px !important
}
#contact .container{
	padding-right: 15px !important
}
}

@media (max-width: 540px){
#partners li {
	width: 50% !important;
}
.breadcrumb {
	margin-top: 0px
}
#services .col-md-3 {
	width: 100%;
	border-bottom: 1px solid #e7e7e7;
}
body #partners li{
	width: 50% !important
}
.col-md-4.col-sm-6.col-xs-6 {
	width: 100%
}
}


@media(max-width:640px){
.container{
	width:100% !important;
}
body #lightGallery li {
	width: 100% !important
}
.breadcrumb {
	margin-top: 0px
}
}

@media (max-width: 767px){
.navbar{
	background: #F44336
	border: #F44336 !important
}
.navbar ul {
	margin: 0px auto 0 auto
	width: 99% !important
}
.navbar ul li {
	margin-left: 0px
}
.navbar ul li a {
	text-align: center
	background: transparent
	color: #ffcdd2!important
	font-weight: bold
	text-decoration: none !important
	padding: 15px 0
	border-bottom: 1px solid #eb4235
	line-height: 22px
}
#partners li{
	width: 33% !important
}
#lightGallery li {
	width: 50%;
}
}

@media (max-width:991px){
#sub-heading .row  > div{
text-align center
}
.breadcrumb {
	margin-top: 0px
}
}

@media (min-width: 992px){
#services .col-md-3{
	border-right: 1px solid #e7e7e7;
	border-bottom: 1px solid #e7e7e7;
	min-height: 300px;
}
}





