#products
	background-color: #fff
	.container
		margin: auto
		padding: 50px 0px 50px 18px
		max-width: 1100px
		.product-title
			font-size: 14px
			font-weight: 800
			margin-bottom: 10px
			padding-bottom: 15px;
			border-bottom: 1px solid #eee
.product-holder
	min-height: 375px
	background-color: #f5f5f5
	padding: 5px 15px 20px 15px
	border: 1px solid #eee
	margin: 10px 0
div.product-holder:hover 
	box-shadow: 0px 0px 15px #ececec !important;
	z-index: 1;